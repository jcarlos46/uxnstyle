-- pomodoro.tsu
-- Pomodoro Timer Example
*main jmp

print: "print" 1 "VOID" ffi ret
execute: "os.execute" 1 "VOID" ffi ret
write: "io.write" 1 "VOID" ffi ret

minutes: 60 * ret

clean: -- ( -- )
  [ 7 ] write
  "clear" execute
ret

main: -- ( -- )
  "Pomodoro Timer Example" print
  pomodoro:
    clean
	"Working time!" print
	25 minutes sleep 
	clean
	"Take break!" print
	5 minutes sleep 
  *pomodoro jmp
halt